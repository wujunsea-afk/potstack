# PotStack HTTPS 配置
# 修改后自动生效（约 30 秒），无需重启服务

# 模式：http / https
mode: https

# ACME 自动证书配置（mode=https 时生效）
acme:
  # 是否启用自动续签（默认 true）
  enabled: true
  
  # 域名（启用自动续签时必填）
  domain: "tongwen.chat"
  
  # 验证方式：http-01 / dns-01（默认 dns-01）
  challenge: dns-01
  
  # HTTP-01 配置（需要 80 端口可访问，中国大陆需备案）
  http:
    port: 80
  
  # DNS-01 配置（无需开放端口，无需备案）
  dns:
    provider: tencentcloud  # tencentcloud / alidns / cloudflare
    credentials:
      # 腾讯云（默认，使用腾讯云 API SecretId/SecretKey）
      secret_id: ""
      secret_key: ""
      
      # 阿里云 DNS（取消注释使用）
      # access_key_id: ""
      # access_key_secret: ""
      
      # Cloudflare（取消注释使用）
      # api_token: ""
  
  # CA 目录列表（按优先级排序）
  directories:
    - https://acme-v02.api.letsencrypt.org/directory
    - https://acme.zerossl.com/v2/DV90
  
  # 重试策略
  retry_count: 3
  retry_delay_seconds: 5
  
  # 提前续签天数
  renew_before_days: 30
  
  # 联系邮箱（可选，用于接收证书过期通知）
  email: ""
